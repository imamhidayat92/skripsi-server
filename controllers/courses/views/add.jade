extends ../../../views/layouts/default

block content
   .container
      .row
         .col-md-12
            .page-header
               h1 Tambah Mata Kuliah Baru

      .row
         .col-md-4.col-md-offset-4
            form(method='post', action='/courses/add')
               .form-group
                  label Nama
                  input.form-control(type='text', name='name')
               .form-group
                  label Jumlah SKS
                  input.form-control(type='text', name='credits')
               .form-group
                  label Deskripsi
                  textarea.form-control(name='description')
               .form-group
                  label Program Studi
                  select.form-control(name='major')
                     option(value='') Umum
                     each major in majors
                        option(value='#{major._id}') #{major.name}
               
               input.btn.btn-success.btn-block(type='submit', value='Tambah Mata Kuliah Baru')
