extends ../../../views/layouts/default

block content
   .container
      .row
         .col-md-12
            .page-header
               h1 Edit Schedule

      .row
         .col-md-4.col-md-offset-4
            form(method='post', action='/schedules/#{schedule._id}/edit')
               .form-group
                  label Day
                  select.form-control(name='day_code')
                     option(value="1", selected=schedule.day_code == 1) Monday
                     option(value="2", selected=schedule.day_code == 2) Tuesday
                     option(value="3", selected=schedule.day_code == 3) Wednesday
                     option(value="4", selected=schedule.day_code == 4) Thursday
                     option(value="5", selected=schedule.day_code == 5) Friday
                     option(value="6", selected=schedule.day_code == 6) Saturday
                     option(value="0", selected=schedule.day_code == 0) Sunday
               .form-group
                  label Start Time
                  input.form-control(name='start_time', value='#{schedule.start_time}')
               .form-group
                  label End Time
                  input.form-control(name='end_time', value='#{schedule.end_time}')
               .form-group
                  label Location
                  select.form-control(name='location')
                     each location in locations
                        option(value="#{location._id}", selected=schedule.location._id + '' == location._id + '') #{location.name}

               input.btn.btn-success.btn-block(type='submit', value='Save')
