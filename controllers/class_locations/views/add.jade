extends ../../../views/layouts/default

block content
	.container
		.row
			.col-md-12
				.page-header
					h1 Tambah Lokasi Baru

		.row
			.col-md-4.col-md-offset-4
				form(method='post', action='/class_locations/add')
					.form-group
						label Nama
						input.form-control(type='text', name='name')
					.form-group
						label Deskripsi
						textarea.form-control(name='description')
				
					input.btn.btn-success.btn-block(type='submit', value='Tambah Lokasi Baru')
