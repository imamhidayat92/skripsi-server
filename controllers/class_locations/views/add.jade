extends ../../../views/layouts/default

block content
   .container
      .row
         .col-md-12
            .page-header
               h1 Add New Class Location

      .row
         .col-md-4.col-md-offset-4
            form(method='post', action='/class_locations/add')
               .form-group
                  label Name
                  input.form-control(type='text', name='name')
               .form-group
                  label Description
                  textarea.form-control(name='description')
            
               input.btn.btn-success.btn-block(type='submit', value='Add New Class Location')
